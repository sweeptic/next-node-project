{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
    // "rootDir": "./",
    // "baseUrl": "./",
    // "paths": {
    //   "@src/*": ["./src/*"]
    // }
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
